@model BibliotecaWebApplication.Models.Libro

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Libro</h1>

<h3>¿Estás seguro de que deseas eliminar este libro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Formato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPaginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPaginas)
        </dd>
        <dt class="col-sm-2">
            Autores
        </dt>
        <dd class="col-sm-10">
            @foreach (var autorLibro in Model.AutorLibros)
            {
                <span>@autorLibro.Autor.Nombres @autorLibro.Autor.Apellidos</span>
                <br />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LibroId" />
        <button type="submit" class="btn btn-delete"><i class="fas fa-trash-alt"></i> Borrar</button>
        <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
    </form>
</div>

