@model BibliotecaWebApplication.Models.Estante

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Estante</h1>

<h3>¿Estás seguro de que deseas eliminar este estante?</h3>
<div>
    <h4>Estante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CodigoEstante)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CodigoEstante)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estanteria)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estanteria.EstanteriaId)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EstanteId" />
        <button type="submit" class="btn btn-delete"><i class="fas fa-trash-alt"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
    </form>
</div>
