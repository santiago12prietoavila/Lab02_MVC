@model BibliotecaWebApplication.Models.Estante

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Estante</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoEstante" class="control-label"></label>
                <input asp-for="CodigoEstante" class="form-control" />
                <span asp-validation-for="CodigoEstante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstanteriaId" class="control-label"></label>
                <select asp-for="EstanteriaId" class="form-control" asp-items="ViewBag.EstanteriaId"></select>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Crear</button>
                <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
