@model BibliotecaWebApplication.Models.Autor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Autor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nacionalidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nacionalidad)
        </dd>
        
    </dl>
</div>

<div class="row">
    <h4>Libros Escritos</h4>
    <ul class="list-group list-group-flush">
        @if (Model.AutorLibros.Any())
        {
            foreach (var autorLibro in Model.AutorLibros)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="badge text-primary me-2">
                        <i class="bi bi-book"></i>
                    </span>
                    @autorLibro.Libro.Titulo
                </li>
            }
        }
        else
        {
            <li class="list-group-item">Este autor no tiene libros asociados.</li>
        }
    </ul>
</div>

<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AutorId" class="btn btn-edit"><i class="fas fa-edit"></i> Editar</a>
    <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
</div>

